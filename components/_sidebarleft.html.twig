<div class="row">

    <div class="col-xs-3 slidebar slidebar-left">
        <div class="col-xs-10 col-xs-offset-1">
            <form class="form-horizontal" method="POST"
                  enctype="multipart/form-data">
                <h3>Recherche Rapide</h3>
                {# Titre de la recette #}
                <div class="form-group">
                    <div class="col-md-12">
                        {{ form_row(form.titre) }}
                    </div>
                </div>

                {# Type de la recette #}
                <div class="form-group">
                    <div class="col-md-12">
                        {{ form_row(form.categorie) }}
                    </div>
                </div>

                {# Prix de la recette #}
                <div class="form-group">
                    <div class="col-md-10">
                        {{ form_row(form.prix) }}
                    </div>
                </div>

                {# Submit #}
                <div class="form-group">
                    <div class="col-xs-7 col-xs-offset-3">
                        {{ form_end(form) }}
                    </div>
                </div>

            </form>
        </div>
    </div>
    </div>

</div>